<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical"
    android:paddingTop="@dimen/app_top">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/activity_setting_budget_back_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/back"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="预算/结余"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/activity_setting_budget_information_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="i"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/show_overview_page_title_top_and_bottom"
                        android:layout_marginBottom="@dimen/show_overview_page_title_top_and_bottom"
                        android:gravity="left|center_vertical"
                        android:text="按全部计算"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="全部预算:"
                                android:textColor="#ff9e9e9e"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/activity_setting_budget_all_budget_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="3"
                                android:background="@null"
                                android:gravity="center_vertical|right"
                                android:paddingRight="5dp"
                                android:text="+100"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="全部结余:"
                                android:textColor="#ff9e9e9e"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/activity_setting_budget_all_surplus_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="3"
                                android:background="@null"
                                android:gravity="center_vertical|right"
                                android:paddingRight="5dp"
                                android:text="+100"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/show_overview_page_title_top_and_bottom"
                        android:layout_marginBottom="@dimen/show_overview_page_title_top_and_bottom"
                        android:gravity="left|center_vertical"
                        android:text="按年计算"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="每年预算:"
                                android:textColor="#ff9e9e9e"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/activity_setting_budget_year_budget_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="3"
                                android:background="@null"
                                android:gravity="center_vertical|right"
                                android:paddingRight="5dp"
                                android:text="+100"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="本年结余:"
                                android:textColor="#ff9e9e9e"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/activity_setting_budget_year_surplus_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="3"
                                android:background="@null"
                                android:gravity="center_vertical|right"
                                android:paddingRight="5dp"
                                android:text="+100"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/show_overview_page_title_top_and_bottom"
                        android:layout_marginBottom="@dimen/show_overview_page_title_top_and_bottom"
                        android:gravity="left|center_vertical"
                        android:text="按月计算"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="每月预算:"
                                android:textColor="#ff9e9e9e"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/activity_setting_budget_month_budget_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="3"
                                android:background="@null"
                                android:gravity="center_vertical|right"
                                android:paddingRight="5dp"
                                android:text="+100"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="本月结余:"
                                android:textColor="#ff9e9e9e"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/activity_setting_budget_month_surplus_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="3"
                                android:background="@null"
                                android:gravity="center_vertical|right"
                                android:paddingRight="5dp"
                                android:text="+100"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/show_overview_page_title_top_and_bottom"
                        android:layout_marginBottom="@dimen/show_overview_page_title_top_and_bottom"
                        android:gravity="left|center_vertical"
                        android:text="按周计算"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="每周预算:"
                                android:textColor="#ff9e9e9e"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/activity_setting_budget_week_budget_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="3"
                                android:background="@null"
                                android:gravity="center_vertical|right"
                                android:paddingRight="5dp"
                                android:text="+100"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="本周结余:"
                                android:textColor="#ff9e9e9e"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/activity_setting_budget_week_surplus_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="3"
                                android:background="@null"
                                android:gravity="center_vertical|right"
                                android:paddingRight="5dp"
                                android:text="+100"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </ScrollView>




    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />
    <LinearLayout
        android:id="@+id/activity_setting_budget_overview_display_setting_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页展示："
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/activity_setting_budget_overview_display_setting_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/activity_setting_budget_overview_array"
            android:theme="@style/activity_setting_budget_overview_sppinner"
            />

    </LinearLayout>


</LinearLayout>