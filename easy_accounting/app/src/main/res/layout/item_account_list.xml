<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:background="@color/background_white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
<!--        <ImageView-->
<!--            android:id="@+id/account_item_in_the_recycle_view_tag_img"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            android:padding="5dp"-->
<!--            android:src="@drawable/app"/>-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/account_item_in_the_recycle_view_tag_img_text"
                android:layout_width="@dimen/item_account_tag_img_size"
                android:layout_height="@dimen/item_account_tag_img_size"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center_vertical|center"
                android:background="@drawable/text_view_circle"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/account_item_in_the_recycle_view_tag_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:textSize="18sp"
                android:text="标签名"/>
            <TextView
                android:id="@+id/account_item_in_the_recycle_view_tag_remark"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="备注"
                android:ellipsize="end"
                android:maxLines="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/account_item_in_the_recycle_view_tag_sum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textSize="18sp"
                android:text="+0.0"/>
            <TextView
                android:id="@+id/account_item_in_the_recycle_view_tag_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="2021/11/12"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_gray"/>
</LinearLayout>