<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/show_overview_page_classify"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pie"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/show_overview_page_search"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/search"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/show_overview_page_current_account_book_name"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="我的账本"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="right|center_vertical">
                <ImageView
                    android:id="@+id/show_overview_page_switch_book"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/more"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_dark_gray"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/show_overview_page_title_top_and_bottom"
                    android:layout_marginBottom="@dimen/show_overview_page_title_top_and_bottom"
                    android:gravity="left|center_vertical"
                    android:text="预算结余"
                    android:textSize="15sp" />
                <LinearLayout
                    android:id="@+id/show_overview_page_surplus_layout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_corner">

                    <TextView
                        android:id="@+id/show_overview_page_surplus_tpye_textview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="结余:"
                        android:textColor="#ff9e9e9e"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/show_overview_page_surplus_sum_textview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="3"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:paddingRight="5dp"
                        android:text="点击设置"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/show_overview_page_title_top_and_bottom"
                    android:layout_marginBottom="@dimen/show_overview_page_title_top_and_bottom"
                    android:gravity="left|center_vertical"
                    android:text="总花费"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="全部:"
                            android:textColor="#ff9e9e9e"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/show_overview_page_expenditure_all"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:text="+100"
                            android:textSize="18sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="本周:"
                            android:textColor="#ff9e9e9e"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/show_overview_page_expenditure_week"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:text="+100"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="本月:"
                            android:textColor="#ff9e9e9e"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/show_overview_page_expenditure_month"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:text="+100"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="本年:"
                            android:textColor="#ff9e9e9e"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/show_overview_page_expenditure_year"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:text="+100"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/show_overview_page_title_top_and_bottom"
                    android:layout_marginBottom="@dimen/show_overview_page_title_top_and_bottom"
                    android:gravity="left|center_vertical"
                    android:text="总收入"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="全部:"
                            android:textColor="#ff9e9e9e"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/show_overview_page_income_all"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:text="+100"
                            android:textSize="18sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="本周:"
                            android:textColor="#ff9e9e9e"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/show_overview_page_income_week"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:text="+100"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="本月:"
                            android:textColor="#ff9e9e9e"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/show_overview_page_income_month"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:text="+100"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="本年:"
                            android:textColor="#ff9e9e9e"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/show_overview_page_income_year"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:text="+100"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/show_overview_page_title_top_and_bottom"
                    android:layout_marginBottom="@dimen/show_overview_page_title_top_and_bottom"
                    android:gravity="left|center_vertical"
                    android:text="借款"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="借出:"
                            android:textColor="#ff9e9e9e"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/show_overview_page_lend"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:text="+100"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="借入:"
                            android:textColor="#ff9e9e9e"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/show_overview_page_borrow"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="3"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:text="+100"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>